<Window x:Class="ImageProcessing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageProcessing"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Image x:Name="ImageElement" Margin="75,17,94,184" Source="{Binding ImageSource}"/>
        <Slider Height="20" Width="500" Margin="0,330,0,0" Value="{Binding SliderValue}" Maximum="{Binding NumberOfFrames}" ValueChanged="Slider_ValueChanged"/>
        <RadioButton x:Name="BrowseFileButton" Width="40" Height="40" Margin="700,0,0,400" Command="{Binding OpenFolderCommand}">
            <RadioButton.Template>
                <ControlTemplate TargetType="RadioButton">
                    <Grid>
                        <Border x:Name="Border"
                        CornerRadius="10">
                            <Path 
                            x:Name="Icon"
                            Width="20"
                            Height="20"
                            Data="M160-160q-33 0-56.5-23.5T80-240v-480q0-33 23.5-56.5T160-800h240l80 80h320q33 0 56.5 23.5T880-640H447l-80-80H160v480l96-320h684L837-217q-8 26-29.5 41.5T760-160H160Zm84-80h516l72-240H316l-72 240Zm0 0 72-240-72 240Zm-84-400v-80 80Z"
                            Fill="#000000"
                            Stretch="Uniform" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="LightBlue"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="White"/>
                            <Setter Property="IsEnabled" Value="False"/>
                            <Setter TargetName="Icon" Property="Data" Value=""/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </RadioButton.Template>
        </RadioButton>
        
        <RadioButton x:Name="PlayButton" Width="40" Height="40" Margin="0,400,0,0" Command="{Binding PlayPauseCommand}">
            <RadioButton.Template>
                <ControlTemplate TargetType="RadioButton">
                    <Grid>
                        <Border x:Name="Border"
                        CornerRadius="10">
                            <Path 
                            x:Name="Icon"
                            Width="30"
                            Height="30"
                            Data="M320-200v-560l440 280-440 280Zm80-280Zm0 134 210-134-210-134v268Z"
                            Fill="#000000"
                            Stretch="Uniform" />
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="LightBlue"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </RadioButton.Template>

        </RadioButton>
    </Grid>
</Window>
